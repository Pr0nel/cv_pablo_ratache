{
  "name": "app",
  "version": "1.1.0",
  "description": "Este repositorio contiene el código fuente del sitio web personal de Pablo Ratache. El sitio muestra las habilidades, experiencia profesional, proyectos, educación y certificaciones.",
  "main": "./js/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-css": "tailwindcss -i ./src/input.css -o ./css/output.css",
    "watch-css": "tailwindcss -i ./src/input.css -o ./css/output.css --watch",
    "dev": "concurrently \"pnpm run watch-css\" \"serve .\"",
    "lh:mobile": "lighthouse https://pr0nel.github.io/cv_pablo_ratache/ --view --chrome-flags=\"--incognito\" --emulated-form-factor=mobile --throttling-method=simulate",
    "lh:desktop": "lighthouse https://pr0nel.github.io/cv_pablo_ratache/ --view --chrome-flags=\"--incognito\" --emulated-form-factor=desktop --throttling-method=simulate",
    "build-css:prod": "NODE_ENV=production tailwindcss -i ./src/input.css -o ./css/output.css --minify",
    "lh:mobilejson": "lighthouse https://pr0nel.github.io/cv_pablo_ratache/ --chrome-flags=\"--incognito\" --emulated-form-factor=mobile --throttling-method=simulate --output=json --output-path=./reports/lh_mobile-report-$(date +%Y%m%d).json",
    "lh:desktopjson": "lighthouse https://pr0nel.github.io/cv_pablo_ratache/ --chrome-flags=\"--incognito\" --emulated-form-factor=desktop --throttling-method=simulate --output=json --output-path=./reports/lh_desktop-report-$(date +%Y%m%d).json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pr0nel/cv_pablo_ratache.git"
  },
  "keywords": [],
  "author": "Pablo Ronel Ratache Rojas",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/Pr0nel/cv_pablo_ratache/issues"
  },
  "homepage": "https://github.com/Pr0nel/cv_pablo_ratache#readme",
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "lighthouse": "12.8.2",
    "postcss": "^8.5.4",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.17"
  }
}